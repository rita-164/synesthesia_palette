<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t '.title' %></h1>
      <%= form_with model: @human_name_synesthesia, url: admin_human_name_synesthesium_path(@human_name_synesthesia), local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
        <%= f.label :color %>
        <%= f.file_field :color, class: "form-control", accept: 'image/*', onchange: 'previewImage(preview)', rows: 10 %>
        <%= f.hidden_field :color_cache %>
        <div class='mt-3 mb-3'>   
          <%= image_tag @human_name_synesthesia.color.url, id: 'preview', size: '300x200' %>
        </div>
        </div>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>