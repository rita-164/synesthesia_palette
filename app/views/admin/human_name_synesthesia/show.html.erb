<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <div class="text-right mb-3">
        <%= link_to t('defaults.edit'), edit_admin_human_name_synesthesium_path(@human_name_synesthesia), class: 'btn btn-success' %>
        <%= link_to t('defaults.delete'), admin_human_name_synesthesium_path(@human_name_synesthesia), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= HumanNameSynesthesium.human_attribute_name(:id) %></th>
          <td><%= @human_name_synesthesia.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= HumanNameSynesthesium.human_attribute_name(:name) %></th>
          <td><%= @human_name_synesthesia.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= HumanNameSynesthesium.human_attribute_name(:color) %></th>
          <td><%= image_tag @human_name_synesthesia.color.url %></td>
        </tr>
        <tr>
          <th scope="row"><%= HumanNameSynesthesium.human_attribute_name(:created_at) %></th>
          <td><%= l @human_name_synesthesia.created_at, format: :long %></td>
        </tr>
      </table>
    </div>
  </div>
</div>