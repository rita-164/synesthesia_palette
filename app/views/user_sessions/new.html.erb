<%= content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <br>
      <%= image_tag 'login.png', size: '214x60' %>
      <br>
      <br>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :email, User.human_attribute_name(:email) %>
          <%= f.text_field :email, class: 'form-control', placeholder: "例) abc@example.com" %>
        </div>
        <div class="form-group">
          <%= f.label :password, User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: 'form-control', placeholder: "パスワードを入力してください" %>
        </div>
        <div class="actions">
          <%= f.submit (t 'defaults.login'), class: 'btn btn-dark' %>
        </div>
      <% end %>
      <br>
      <div class='text-center'>
        <%= link_to (t '.password_forget'), new_password_reset_path, class: 'link' %>
      </div>
      <br>
      <br>
    </div>
  </div>
</div>