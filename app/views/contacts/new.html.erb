<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
    <br>
    <%= image_tag 'contacts.png', size: '695x60' %>
    <br>
    <br>
    <%= form_for(@contact, url: confirm_path) do |f| %>
      <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "例) nickname" %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.text_field :email, autofocus: true, class: 'form-control', placeholder: "例) abc@example.com" %>
      </div>
  
      <div class="form-group">
        <%= f.label :message, 'メッセージ' %>
        <%= f.text_area :message, size: '10x10', class: 'form-control', placeholder: "こちらにメッセージを入力してください。" %>
      </div>
  
      <div>
        <%= f.submit '入力内容確認', class: 'btn btn-dark' %>
      </div>
    <% end %>
    <br>
    <br>
    </div>
  </div>
</div>
