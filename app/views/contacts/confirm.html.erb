<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
        <br>
        <%= image_tag 'confirm.png', size: '321x50' %>
        <br>
        <br>
      <table class="table">
        <tr>
            <th scope="row" style="width: 20%;"><%= t(Contact.human_attribute_name(:name)) %></th>
            <td style="white-space: pre-wrap;"<%= @contact.name %></td>
        </tr>
        <tr>
          <th scope="row" style="width: 20%;"><%= t(Contact.human_attribute_name(:email)) %></th>
          <td style="white-space: pre-wrap;"><%= @contact.email %></td>
        </tr>
        <tr>
          <th scope="row" style="width: 20%;"><%= t(Contact.human_attribute_name(:message)) %></th>
          <td style="white-space: pre-wrap;"><%= @contact.message %></td>
        </tr>
      </table>



      <%= form_for(@contact) do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :message %>
        <div><%= f.submit '送信', class: 'btn btn-dark' %></div>
      <% end %>
      <br>
      <%= form_for @contact, url: back_path do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :message %>
        <div><%= f.submit '入力画面に戻る', class: 'btn btn-dark' %></div>
      <% end %>
      <br>
      <br>
    </div>
  </div>
</div>