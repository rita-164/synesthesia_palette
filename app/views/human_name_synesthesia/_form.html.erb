<%= form_with model: human_name_synesthesia, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :color %>
      <%= f.color_field :color, class: 'form-control', rows: 10 %>
    </div>
  
    <%= f.submit class: 'btn btn-dark' %>
  <% end %>