<%= form_with model: human_name_synesthesia, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "ひらがなで入力" %>
  </div>
  <div class="form-group">
    <%= f.label :color %>
    <%= f.file_field :color, class: 'form-control mb-3', accept: 'image/*' %>
    <%= f.hidden_field :color_cache %>
  </div>
  <div class='mt-3 mb-3'>
    <%= image_tag human_name_synesthesia.color.url, id: 'preview', size: '300x200' %>
  </div>
    <%= f.submit class: 'btn btn-dark' %>
<% end %>