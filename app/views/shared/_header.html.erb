<header>
  <nav class='navbar navbar-expand-lg navigation navbar-light bg-light'>
    <%= link_to root_path, class: 'navbar-brand' do %>
      <%= image_tag 'logo.png', size: '332x50' %>
    <% end %>
    <button class='navbar-toggler' data-toggle='collapse' data-target='#navbarSupportedContent'
      aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>

    <div class='collapse navbar-collapse' id='navbarSupportedContent'>
      <ul class='navbar-nav ml-auto main-nav align-items-center'>
        <li class='nav-item dropdown dropdown-slide'>
        <%= link_to color_diagnoses_path, class: 'nav-link' do %>
          <%= image_tag 'diagnose_button.png', size: '158x50' %>
        <% end %>
        </li>

        <li class='nav-item'>
        <%= link_to new_human_name_synesthesium_path, class: 'nav-link' do %>
          <%= image_tag 'create_button.png', size: '158x50' %>
        <% end %>
        </li>

        <li class='nav-item'>
        <%= link_to human_name_synesthesia_path, class: 'nav-link' do %>
          <%= image_tag 'index_button.png', size: '158x50' %>
        <% end %>
        </li>

        <li class='nav-item dropdown dropdown-slide'>
          <a href='#' class='nav-link' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false' id='header-profile'>
            <%= image_tag current_user.avatar_url, class: 'rounded-circle mr15', size: '50x50' %>
          </a>
          <div class='dropdown-menu dropdown-menu-right'>
            <div class='dropdown-item'><%= current_user.name %></div>
            <div class='dropdown-divider'></div>
            <%= link_to (t 'profiles.show.title'), profile_path, class: 'dropdown-item' %>
            <%= link_to (t 'defaults.logout'), logout_path, class: 'dropdown-item', method: :delete %>
          </div>
        </li>
      </ul>
    </div>
  </nav>
</header>
